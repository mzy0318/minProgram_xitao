@import '../../../utils/iconFont.wxss';
page{
    background:#F2F2F2;
    padding-bottom:30rpx;
}
.editTitle{
    width:710rpx;
    line-height:100rpx;
    font-size:30rpx;
    font-weight:bold;
    margin:10rpx auto 0rpx;
    text-indent:20rpx;
}
.editTitleImage{
    width:710rpx;
    height:180rpx;
    background:#fff;
    border-radius:5px;
    margin:0rpx auto;
}
.editTitleImage>view{
    width:320rpx;
    height:150rpx;
    border:1rpx solid #efefef;
    float:left;
    margin-top:15rpx;
    margin-left:20rpx;
    font-size:22rpx;
    line-height:150rpx;
    text-align:center;
    color:#69BCEA;
}
.editTitleImage>view>image{
    width:320rpx;
    height:150rpx;
}
/* 活动信息 */
.editActInfo,.joinInfo,.editImageWrap{
    width:710rpx;
    min-height:60rpx;
    background:#fff;
    margin:0rpx auto;
    border-radius:5px;
    overflow:hidden;
}
.editActInfoContent{
    width:710rpx;
    height:90rpx;
    border-bottom:.5px solid #efefef;
}
.editActInfoContent>view{
    width:120rpx;
    line-height:90rpx;
    font-size:26rpx;
    color:#7b7b7b;
    float:left;
    margin-left:70rpx;
    text-align:center;
}
.editActInfoContent>input,.editActInfoContent>picker{
    width:440rpx;
    height:50rpx;
    line-height:50rpx;
    float:right;
    color:#7b7b7b;
    margin-right:5rpx;
    font-size:26rpx;
    margin-top:20rpx;
}
/* 报名信息 */
.joinInfoContent,.joinInfoAdd{
    width:710rpx;
    line-height:60rpx;
    font-size:26rpx;
    font-weight:bold;
    text-indent:70rpx;
    border-bottom:.5px solid #efefef;
}
.joinInfoAdd{
    width:710rpx;
    line-height:70rpx;
    font-size:26rpx;
    text-align:center;
    color:#0B98E1;
    font-weight:normal;
}
/* 多图上传 */
.editAddImage{
    width:680rpx;
    height:70rpx;
    margin:10rpx auto;
    border:.5px solid #efefef;
}
.editAddImage text{
    display:block;
    width:70rpx;
    height:70rpx;
    font-size:50rpx;
    color:#785DDE;
    line-height:70rpx;
    margin:0rpx auto;
}
.editImageContent,.editVideoContent{
    width:680rpx;
    min-height:180rpx;
    margin:10rpx auto;
}
.editImageContent view{
    width:200rpx;
    height:160rpx;
    display:inline-block;
    vertical-align:top;
    margin-top:10rpx;
    margin-left:20rpx;
    background:lightblue;
    border-radius:5px;
}
.iconStyle{
    font-size:55rpx;
}
/* 上传视频 */
.editVideoContent>view,.editVideoContent>view>video{
    width:680rpx;
    height:350rpx;
}
.editTextInfo{
    width:680rpx;
    height:320rpx;
    background:#fff;
    margin:0rpx auto 0rpx;
    padding-top:1px;
}
.editTextInfo view{
    width:640rpx;
    height:280rpx;
    border:.5px solid #efefef;
    margin-top:20rpx;
    margin-left:20rpx;
}
.editTextInfo>view>textarea{
    width:620rpx;
    height:260rpx;
    margin-left:10rpx;
    margin-top:10rpx;
    font-size:26rpx;
    color:#7b7b7b;
}
