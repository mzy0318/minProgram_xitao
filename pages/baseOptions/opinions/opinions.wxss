.opinionWrap {
    width: 750rpx;
    height: 1206rpx;
    background: #f2f2f2;
}

.opinionImg {
    width: 100%;
    height: 270rpx;
    background: #fff;
}

.opinionWrap input {
    width: 650rpx;
    height: 80rpx;
    background: #fff;
    margin-left: 30rpx;
}

.opinionInput {
    width: 680rpx;
    height: 80rpx;
    margin: 0 auto;
    background: #fff;
    margin-top: 40rpx;
}

