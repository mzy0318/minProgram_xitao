page{
    background:#F5F5F5;
    position:relative;
}
.empty{
    width:100%;
    height:50rpx;
    background:transparent;
}
/* 头像 */
.listInfoImage{
    width:200rpx;
    height:200rpx;
    border-radius:50%;
    background:#fff;
    margin:0rpx auto;
    overflow:hidden;
}
.listInfoImage image{
    width:200rpx;
    height:200rpx;
}
/* 内容 */
.listInfoContent{
    width:650rpx;
    min-height:80rpx;
    background:#fff;
    margin:20rpx auto;
}
.listInfoWrap,.listInfoCount{
    width:650rpx;
    height:100rpx;
    border-bottom:1rpx solid #efefef;
}
.listInfoWrap view{
    float:left;
    height:100rpx;
    line-height:100rpx;
    font-size:30rpx;
}
.listInfoWrap view:nth-child(1),.listInfoCount view:nth-child(1){
    width:180rpx;
    text-align:right;
    color:#7b7b7b;
}
.listInfoWrap view:nth-child(2),.listInfoCount view:nth-child(2){
    width:400rpx;
    margin-left:15rpx;
    color:#000;
}
.listInfoCount view{
    float:left;
    height:100rpx;
    line-height:100rpx;
    font-size:30rpx;
    color:red !important;
}
.btns{
    width:650rpx;
    height:100rpx;
    margin:0rpx auto 20rpx;
}
.btns button{
    width:310rpx;
    height:100rpx;
    float:left;
    font-size:35rpx;
    line-height:100rpx;
}
.btns button:nth-child(1){
    color:#4B739A;
}
.btns button:nth-child(2){
    margin-left:30rpx;
    color:#BF2B0E;
}
.editBtn{
    width:650rpx;
    height:100rpx;
    line-height:100rpx;
    font-size:35rpx;
    margin-bottom:20rpx;
}
/* 分数加减 */
.scoreWrap{
    width:100%;
    height:100%; 
    background:rgba(0,0,0,0.3);
    position:fixed;
    top:0rpx;
    left:0rpx;
    z-index:1000;
}
.scoreContent{
    width:560rpx;
    height:600rpx;
    background:#FFFFFF;
    position:absolute;
    top:50%;
    left:50%;
    margin-left:-280rpx;
    margin-top:-380rpx;
}
.scoreTitle{
    width:100%;
    height:100rpx;
    line-height:100rpx;
    background:#DDD;
    font-size:30rpx;
    text-align:center;
    color:#587CA0;
}
.scoreNum{
    width:500rpx;
    height:90rpx;
    margin:20rpx auto 0rpx;
}
.scoreNum view{
    float:left;
    height:90rpx;
    line-height:90rpx;
    font-size:30rpx;
}
.scoreNum view:nth-child(1){
    width:80rpx;
    text-align:right;
}
.scoreNum view:nth-child(2){
    width:400rpx;
    background:#eee;
    margin-left:20rpx;
}
.scoreNum view:nth-child(2) input{
    width:380rpx;
    height:60rpx;
    font-size:30rpx;
    margin-left:20rpx;
    margin-top:15rpx;
}
.scoreText{
    width:500rpx;
    height:260rpx;
    margin:20rpx auto 0rpx;
}
.scoreText view{
    float:left;
    height:260rpx;
    font-size:30rpx;
}
.scoreText view:nth-child(1){
    width:80rpx;
    text-align:right;
    line-height:260rpx;
}
.scoreText view:nth-child(2){
    width:400rpx;
    background:#eee;
    margin-left:20rpx;
}
.scoreText view:nth-child(2) textarea{
    width:380rpx;
    height:240rpx;
    font-size:30rpx;
    margin-left:20rpx;
    margin-top:10rpx;
}
.scoreBtn{
    width:100%;
    height:60rpx;
    margin-top:20rpx;
}
.scoreBtn button{
    width:250rpx;
    height:60rpx;
    font-size:30rpx;
    float:left;
    margin-left:20rpx;
    line-height:60rpx;
}
.scoreBtn button:nth-child(1){
    color:#7b7b7b;
}
.scoreBtn button:nth-child(2){
    color:#3FA13E;
}