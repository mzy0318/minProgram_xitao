@import '../../../templates/frozen/frozen.wxss';
page{
    background:#F2F2F2;
    padding-bottom:15rpx;
}
.taskReplyOpts{
    width:710rpx;
    height:80rpx;
    background:#fff;
    margin:20rpx auto 20rpx;
}
.taskReplyOpts view{
    float:left;
    width:33.33%;
    height:80rpx;
    text-align:center;
    font-size:30rpx;
}
.taskReplyOpts view text{
    display:block;
    width:100%;
    height:40rpx;
    line-height:40rpx;
    border-left:1px solid #efefef;
    margin-top:20rpx;
}
.taskReplyOpts view:nth-child(1) text{
    border:0rpx
}
.replyBtn{
    width:710rpx;
    height:100rpx;
    color:#fff;
    line-height:100rpx;
    background:#1AAC19;
    font-size:35rpx;
}
/* 内容 */
.replyContent,.replyImage,.replyAudio{
    width:710rpx;
    min-height:100rpx;
    background:#fff;
    margin:20rpx auto;
}
.replyTitle{
    height:60rpx;
    width:710rpx;
    background:#DDDDDD;
}
.replyTitle view{
    width:100rpx;
    line-height:60rpx;
    font-size:28rpx;
    text-align:center;
    color:#fff;
    background:#336799;
}
.replyInput{
    width:710rpx;
    height:440rpx;
    background:#F9F9F9;
}
.replyInput textarea{
    width:670rpx;
    height:410rpx;
    margin-top:15rpx;
    margin-left:20rpx;
    font-size:30rpx;
}
/* 图片  视频 */
.replyImageList{
    width:710rpx;
    min-height:200rpx;
    padding:10rpx 0rpx;
    background:#FFFFFF;
}
.replyImageList .replyImageContent{
    width:200rpx;
    height:200rpx;
    background:#fff;
    display:inline-block;
    vertical-align:top;
    margin-left:27.5rpx;
    margin-top:15rpx;
    position:relative;
}
.replyImageList .replyImageContent image,.replyImageList .replyImageContent video{
    width:200rpx;
    height:200rpx;
}
.delImage{
    width:40rpx;
    height:40rpx;
    border-radius:50%;
    line-height:40rpx;
    color:#fff;
    font-size:35rpx;
    text-align:center;
    position:absolute;
    top:-20rpx;
    right:-20rpx;
    background:#D81D07;
}

/* 录音 */
.replyAudio{
    padding-bottom:10rpx;
}
.replyAudioList{
    width:680rpx;
    height:80rpx;
    margin-top:15rpx;
    margin-left:20rpx;
}
.replyAudioList .replyAudioContent{
    width:300rpx;
    height:80rpx;
    background:#9EEB6B;
    border-radius:5px;
    position:relative;
}
.replyAudioContent image{
    width:300rpx;
    height:80rpx;
}
/* 顶部作业 */
.listInfoContent{
    width:690rpx;
    min-height:80rpx;
    border-radius:5px;
    border:2px solid #98B1C6;
    margin:10rpx auto 0rpx;
    background:#fff;
    position:relative;
}
.listInfoTime{
    width:300rpx;
    background:#1BAAE4;
    line-height:40rpx;
    color:#fff;
    font-size:22rpx;
    text-align:center;
    position:absolute;
    margin-left:-150rpx;
    left:50%;
}
.homeWorkContent{
    width:690rpx;
    min-height:100rpx;
    background:#fff;
    margin:30rpx auto 0rpx;
    border-radius:5px;
}
.empty{
    width:100%;
    height:20rpx;
}
.homeWorkImage{
    width:670rpx;
    height:80rpx;
    line-height:80rpx;
    font-size:30rpx;
    color:#7b7b7b;
    margin:0rpx auto;
}
.homeWorkImage>view{
    width:80rpx;
    height:80rpx;
    border-radius:50%;
    background:lightgreen;
    float:left;
}
/* 留言 */
.homeWorkText{
    width:690rpx;
    min-height:40rpx;
    line-height:40rpx;
    font-size:30rpx;
    text-indent:20rpx;
}
/* 作业 录音 */
.homeWorkAudio{
    width:670rpx;
    min-height:80rpx;
    background:#fff;
    margin:10rpx auto 0rpx;
}
.homeWorkAudio view{
    width:300rpx;
    height:80rpx;
    border-radius:5px;
    background:#9EEB6B;
    margin-bottom:8rpx;
}
/* 作业 图片 视频 */
.homeWorkVideo{
    width:420rpx;
    min-height:200rpx;
    margin-top:10rpx;
    margin-left:20rpx;
    padding-bottom:10rpx;
}
.homeWorkVideo view{
    width:200rpx;
    height:200rpx;
    display:inline-block;
    background:lightblue;
    vertical-align:top;
    margin-top:5rpx;
}
.homeWorkVideo view:nth-child(even){
    margin-left:10rpx;
}
.homeWorkVideo view image{
    width:200rpx;
    height:200rpx;
}
.homeWorkVideo view video{
    width:200rpx;
    height:200rpx;
}
/* 录音页面 */
.audioWrap{
    width:100%;
    height:100%;
    position:fixed;
    background:rgba(0,0,0,0.3);
    top:0rpx;
    left:0rpx;
}
.audioContent{
    width:100%;
    height:320rpx;
    position:absolute;
    bottom:0rpx;
    left:0rpx;
    background:#fff;
}
.audioTitle{
    width:100%;
    line-height:100rpx;
    font-size:30rpx;
    color:#7C7C7C;
    text-align:center;
}
.audioImage{
    width:120rpx;
    height:120rpx;
    margin:20rpx auto;
    border-radius:50%;
    border:7px solid #7C7C7C;
}
.audioImage image{
    width:70rpx;
    height:70rpx;
    margin-left:25rpx;
    margin-top:25rpx;
}

.replyBtns{
    width:700rpx;
    min-height:100rpx;
    margin:20rpx auto;
}
.replyBtns button{
    width:340rpx;
    height:100rpx;
    float:left;
    line-height:100rpx;
    font-size:30rpx;
}
.replyBtns button:nth-child(2){
    color:#fff;
    background:#1AAC19;
    margin-left:20rpx;
}
.replyBtns button:nth-child(3){
    width:100%;
    height:100rpx;
    margin-top:15rpx;
}
.copyWran{
    width:100%;
    height:100%;
    background:#F2F2F2;
    position:fixed;
    top:0rpx;
    left:0rpx;
}
.courseDate{
    width:710rpx;
    height:60rpx;
    font-size:30rpx;
    line-height:60rpx;
    text-indent:20rpx;
    background:#fff;
    margin:15rpx auto 0rpx;
}
/* 日期 */
.dateRank{
    width:700rpx;
    height:120rpx;
    background:#fff;
    margin:20rpx auto 0rpx;
}
.dateRank>view{
    width:700rpx;
    height:60rpx;
    line-height:60rpx;
    font-size:30rpx;
    background:#F9F9F9;
}
.dateRank>view:nth-child(2)>text:nth-child(1){
    color:#D55050;
}
.dateRank>view:nth-child(2)>text:nth-child(2){
    color:#7b7b7b;
}
.dateWrap{
    width:700rpx;
    min-height:100rpx;
    margin:50rpx auto 0rpx;
    background:lightgreen;
}
.dateWeek{
    width:700rpx;
    height:80rpx;
    background:#F5F5F5;
}
.dateWeek>view{
    width:100rpx;
    line-height:80rpx;
    text-align:center;
    font-size:30rpx;
    float:left;
}
.dateWeek>view:nth-child(6),.dateWeek>view:nth-child(7){
    color:#D15353;
}
.weekDay{
    width:700rpx;
    min-height:80rpx;
    background:#fff;
}
.weekDayContent{
    display:inline-block;
    vertical-align: top;
    width:100rpx;
    height:80rpx;
    position:relative;
}
.weekDayContent .contentText{
    width:60rpx;
    height:60rpx;
    text-align:center;
    line-height:60rpx;
    font-size:35rpx;
    border-radius:50%;
    border:1px solid red;
    margin:0rpx auto;
}
.weekDayDian{
    width:3px;
    height:3px;
    border-radius:50%;
    background:red;
    margin:5rpx auto;
}
.dateTitle{
    width:700rpx;
    height:100rpx;
    background:#fff;
}
.dateTitleBtn{
    width:210rpx;
    height:100rpx;
    float:right;
}
.dateTitle text{
    display:block;
    height:100rpx;
    line-height:100rpx;
    font-size:30rpx;
    float:left;
}
.dateTitleBtn view{
    width:100rpx;
    height:100rpx;
    float:right;
    border:1px solid #efefef;
    font-size:40rpx;
    line-height:100rpx;
    text-align:center;
}
.copyBtns{
    width:710rpx;
    height:80rpx;
    position:absolute;
    bottom:200rpx;
    left:20rpx;
}
.copyBtns button{   
    width:345rpx;
    height:80rpx;
    float:left;
    font-size:30rpx;
    line-height:80rpx;
}
.copyBtns button:nth-child(2){
    color:#fff;
    background:#1AAC19;
    margin-left:20rpx;
}
.copyText,.copyTextO{
    width:710rpx;
    height:40rpx;
    line-height:40rpx;
    color:#BE2F12;
    font-size:22rpx;
    position:absolute;
    bottom:150rpx;
    left:25rpx;
}
.copyTextO{
    bottom:110rpx;
}

