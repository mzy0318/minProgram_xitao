@import '../../../templates/frozen/frozen.wxss';
page{
    background:#F2F2F2;
}
.rankImage{
    width:310rpx;
    height:70rpx;
    margin:50rpx auto;
}
.rankImage image{
    width:310rpx;
    height:70rpx;
}
/* 积分选项 */
.homeOptions{
    width:100%;
    height:80rpx;
    background:#fff;
    margin-top:20rpx;
}
.homeOptions view{
    width:33.33%;
    float:left;
    text-align:center;
    font-size:30rpx;
}
.homeOptions view text{
    display:block;
    width:100%;
    height:30rpx;
    margin-top:25rpx;
    line-height:30rpx;
    border-left:1px solid #efefef;
}
.homeOptions view:nth-child(1) text{
    border-left:0px;
}
/* 作业 */
.rankWork{
    width:100%;
    min-height:0rpx;
    background:#fff;
    margin-top:20rpx;
}
.rankWorkContent{
    width:100%;
    height:120rpx;
    background:#fff;
}
.rankWorkIcon,.rankWorkImage{
    width:80rpx;
    height:80rpx;
    background:#fff;
    float:left;
    margin-left:20rpx;
    margin-top:20rpx;
}
.rankWorkIcon image,.rankWorkImage image{
    width:80rpx;
    height:80rpx;
}
.rankWorkImage{
    border-radius:50%;
    overflow: hidden;
}
.rankWorkText{
    height:120rpx;
    width:500rpx;
    float:left;
    margin-left:15rpx;
    border-bottom:1rpx solid #efefef;
}
.rankWorkText view{
    width:500rpx;
    font-size:24rpx;
    line-height:35rpx;
}
.rankWorkText view:nth-child(1){
    margin-top:25rpx;
}
.rankWorkText view:nth-child(2){
    color:#7b7b7b;
}
