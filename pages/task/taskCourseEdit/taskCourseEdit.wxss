page{
    background:#F2F2F2;
}
.courseEdit,.taskSet{
    width:710rpx;
    height:300rpx;
    background:#FFF;
    margin:20rpx auto 0rpx;
}
.courseEditTitle{
    width:710rpx;
    height:100rpx;
    line-height:100rpx;
    font-size:30rpx;
    text-indent:50rpx;
    border:1rpx solid #efefef;
}
.courseEditTitle>text{
    color:#BC4028;
}
.courseEditContent{
    width:710rpx;
    height:100rpx;
    border:1rpx solid #efefef;
}
.editContentLeft{
    width:190rpx;
    height:100rpx;
    float:left;
    line-height:100rpx;
    font-size:30rpx;
    color:#7b7b7b;
    text-align:right;
}
.editContentRight{
    width:500rpx;
    height:100rpx;
    float:left;
    margin-left:20rpx;
    font-size:30rpx;
    color:#7b7b7b;
    line-height:100rpx;
}
.editContentRight input{
    width:440rpx;
    height:100rpx;
    line-height:100rpx;
    font-size:30rpx;
    color:#000;
}
.editContentRight picker{
    display:inline-block;
    width:180rpx;
    height:60rpx;
    margin-top:18rpx;
    background:#fff;
    vertical-align:top;
    line-height:60rpx;
    text-align:center;
    color:#000;
}
/* 负责老师 */
.courseEditTeacher{
    width:710rpx;
    min-height:230rpx;
    background:#FFF;
    margin:20rpx auto 0rpx;
}
.addTeacher{
    width:710rpx;
    min-height:130rpx;
    padding-bottom:15rpx;
}
.addTeacherBtn,.teacherList{
    width:200rpx;
    height:100rpx;
    border:2rpx dashed #000;
    display:inline-block;
    vertical-align:top;
    margin-top:15rpx;
    margin-left:27.5rpx;
    text-align:center;
    line-height:100rpx;
}
.teacherList{
    border:2rpx solid #000;
    font-size:30rpx;
}

/* 保存设置 */
.courseEditBtn{
    width:710rpx;
    height:100rpx;
    line-height:100rpx;
    margin:30rpx auto;
    background:#F8F8F8;
}
/* 老师列表 */
.teacherListWrap{
    width:100%;
    height:100%;
    background:rgba(0,0,0,0.3);
    position:fixed;
    top:0rpx;
    left:0rpx;
    z-index:100;
}
.teacherListContent,.statusList{
    width:100%;
    height:440rpx;
    background:#fff;
    position:absolute;
    bottom:0rpx;
    left:0rpx;
    background:#fff;
}
.teacherListTitle{
    width:100%;
    height:80rpx;
    background:#F9F9F9;
}
.teacherListTitle view:nth-child(1){
    float:left;
    line-height:80rpx;
    font-size:30rpx;
    text-indent:20rpx;
}
.teacherListTitle view:nth-child(2){
    width:120rpx;
    height:60rpx;
    float:right;
    margin-right:20rpx;
    margin-top:10rpx;
    font-size:30rpx;
    line-height:60rpx;
    text-align:center;
    border:1rpx solid #7b7b7b;
}
.teacherContent{
    width:100%;
    height:360rpx;
    overflow-y:scroll;
    padding-bottom:20rpx;
}
.teacherContent view{
    width:200rpx;
    height:100rpx;
    border:1rpx solid #000;
    display:inline-block;
    text-align:center;
    line-height:100rpx;
    font-size:30rpx;
    margin-top:20rpx;
    margin-left:37.5rpx;
    vertical-align:top;
}
.closeTeahcer{
    width:100%;
    height:600rpx;
    background:transparent;
    position:absolute;
    bottom:440rpx;
}
/* 状态选择 */
.statusListTitle{
    width:100%;
    line-height:80rpx;
    text-align:center;
    font-size:30rpx;
    color:#BD371C;
    border-bottom:1rpx solid #efefef;
}
.statusListContent{
    width:100%;
    height:360rpx;
    background:#efefef;
}
.statusListContent view{
    width:100%;
    line-height:80rpx;
    font-size:35rpx;
    text-align:center;
    border-bottom:1rpx solid #efefef;
    background:#fff;
}
.statusListContent view:nth-child(4){
    width:100%;
    margin-top:32rpx;
}