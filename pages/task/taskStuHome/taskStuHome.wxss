@import '../../../utils/iconFont.wxss';
@import '../../../templates/moreData/moreData.wxss';


page{
    background:#F2F2F2;
    padding-bottom:20rpx;
}
.homeImage{
    width:150rpx;
    height:150rpx;
    background:#fff;
    border-radius:50%;
    margin:40rpx auto 0rpx;
    overflow: hidden;
}
.homeImage image{
    width:150rpx;
    height:150rpx;
}
.homeName{
    width:100%;
    height:60rpx;
    line-height:60rpx;
    font-size:35rpx;
    text-align:center;
    margin-top:20rpx;
    font-weight:bold;
}
/* 主页功能 */
.homeOptions{
    width:100%;
    height:80rpx;
    background:#fff;
    margin-top:20rpx;
}
.homeOptions view{
    width:33.33%;
    float:left;
    text-align:center;
    font-size:30rpx;
}
.homeOptions view text{
    display:block;
    width:100%;
    height:30rpx;
    margin-top:25rpx;
    line-height:30rpx;
    border-left:1px solid #efefef;
}
.homeOptions view:nth-child(1) text{
    border-left:0px;
}
/* 积分功能 */
.homeScore,.homeZan,.homeWork{
    width:710rpx;
    min-height:100rpx;
    margin:20rpx auto 0rpx;
    background:transparent;
}
.homeScoreTitle{
    width:710rpx;
    height:240rpx;
    background:#FFEBEC;
    border:1px solid #F4D0CC;
}
.homeScoreTitle view{
    width:100%;
    height:40rpx;
    line-height:40rpx;
    font-size:26rpx;
    color:#514D4C;
    text-indent:20rpx;
}
.homeScoreTitle view:nth-child(1){
    height:100rpx;
    font-size:40rpx;
    color:#C32606;
    text-align:center;
    line-height:100rpx;
}
.homeScoreList{
    width:710rpx;
    height:110rpx;
    background:#fff;
    margin-top:20rpx;
}
.scoreEmpty{
    width:100%;
    height:20rpx;
}
.homeScoreListLeft{
    width:45%;
    height:110rpx;
    float:left;
}
.homeScoreListLeft view:nth-child(1){
    height:60rpx;
    font-size:30rpx;
    color:#333130;
    text-indent:20rpx;
    line-height:60rpx;
}
.homeScoreListLeft view:nth-child(2){
    height:30rpx;
    font-size:24rpx;
    color:#717171;
    text-indent:20rpx;
    line-height:30rpx;
}
.homeScoreListRight{
    width:40%;
    height:110rpx;
    float:right;
    line-height:110rpx;
    text-align:right;
    margin-right:10rpx;
    font-size:40rpx;
}
/* 点赞*/
.homeZanContent{
    width:710rpx;
    height:80rpx;
    margin-bottom:20rpx;
    background:#fff;
}
.homeZanContent view{
    width:300rpx;
    float:left;
    height:80rpx;
    font-size:28rpx;
    line-height:80rpx;
    margin-left:20rpx;
    color:#353535;
}
.homeZanContent view:nth-child(2){
    float:right;
    margin-right:20rpx;
    color:#7b7b7b;
    text-align:right;
    font-size:24rpx;
}
/* 作业 */
.homeWorkContent{
    width:710rpx;
    min-height:100rpx;
    background:#fff;
    padding-bottom:15rpx;
    margin-bottom:20rpx;
}
.empty{
    width:100%;
    height:20rpx;
}
.homeWorkImage{
    width:670rpx;
    height:80rpx;
    line-height:80rpx;
    font-size:30rpx;
    color:#7b7b7b;
    margin:0rpx auto;
}
.homeWorkImage>view{
    width:80rpx;
    height:80rpx;
    border-radius:50%;
    background:#fff;
    float:left;
}
.homeWorkImage>view>image{
    width:80rpx;
    height:80rpx;
}
/* 作业 录音 */
.homeWorkAudio{
    width:670rpx;
    min-height:0rpx;
    background:#fff;
    margin:10rpx auto 0rpx;
}
.homeWorkAudio view{
    width:300rpx;
    height:80rpx;
    border-radius:5px;
    margin-bottom:10rpx;
    overflow:hidden;
}
.homeWorkAudio view image{
    width:300rpx;
    height:80rpx;
}
/* 留言 */
.homeWorkText{
    width:690rpx;
    min-height:40rpx;
    line-height:40rpx;
    font-size:30rpx;
    text-indent:20rpx;
}
/* 作业 图片 视频 */
.homeWorkVideo{
    width:420rpx;
    min-height:10rpx;
    margin-top:20rpx;
    margin-left:20rpx;
    padding-bottom:10rpx;
}
.homeWorkVideo view{
    width:200rpx;
    height:200rpx;
    display:inline-block;
    background:#fff;
    vertical-align:top;
    margin-top:10rpx;
}
.homeWorkVideo view:nth-child(even){
    margin-left:10rpx;
}
.homeWorkVideo view image{
    width:200rpx;
    height:200rpx;
}
.homeWorkVideo view video{
    width:200rpx;
    height:200rpx;
}
.homeWorkVideo view video cover-view{
    width:200rpx;
    height:200rpx;
    background:transparent;
}
/* 作业信息 */
.homeWorkInfo{
    width:670rpx;
    height:40rpx;
    margin:10rpx auto 0rpx;
    padding-bottom:15rpx;
    position:relative;
}
.homeWorkInfoTime,.homeWorkInfoMore{
    width:300rpx;
    height:40rpx;
    line-height:40rpx;
    font-size:24rpx;
    color:#7b7b7b;
    float:left;
}
.homeWorkInfoMore{
    width:50rpx;
    float:right;
    text-align:right;
}
.homeWorkInfoMore text{
    font-size:50rpx;
    color:#8593B0;
}
.homeWorkInfoOpt{
    width:340rpx;
    height:60rpx;
    background:#393A3F;
    border-radius:5px;
    position:absolute;
    right:60rpx;
    top:-13rpx;
    overflow:hidden;
}
.homeWorkInfoOpt view{
    width:49%;
    height:40rpx;
    float:left;
    margin-top:10rpx;
    line-height:40rpx;
    text-indent:30rpx;
}
.homeWorkInfoOpt view:nth-child(2){
    border-left:1px solid #000;
}
.homeWorkInfoOpt view text{
    color:#fff;
    font-size:26rpx;
    line-height:40rpx;
}
.homeWorkInfoOpt view text:nth-child(1){
    font-size:35rpx;
}
/* 点赞列表 */
.homeWorkZanList{
    width:670rpx;
    min-height:35rpx;
    margin:10rpx auto 5rpx;
    border-radius:5px;
    background:#F2F2F2;
    text-indent:15rpx;
    line-height:35rpx;
}
.homeWorkZanList text{
    font-size:26rpx;
    color:#A2AABC;
}
.homeWorkZanList text:nth-child(1){
    font-size:35rpx;
    color:#A2AABC;
}