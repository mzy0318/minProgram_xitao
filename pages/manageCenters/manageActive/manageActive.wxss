.manageActiveWrap{
    width:750rpx;
    min-height:1207rpx;
    background:#F2F2F2;
    margin-bottom:95rpx;
}

.empty{
    width:100%;
    height:20rpx;
    background:transparent;
}

.manageActiveShow{
    width:710rpx;
    height:400rpx;
    border-radius:5px;
    background:#fff;
    margin:0 auto 20rpx;
}

.manageActiveTitle{
    width:710rpx;
    line-height:80rpx;
    border-radius:5px 5px 0px 0px;
    font-size:30rpx;
    font-weight:bold;
    text-indent:20rpx;
}

.manageActiveContent{
    width:710rpx;
    height:242rpx;
    border-top:1rpx solid #f2f2f2;
    border-bottom:1rpx solid #f2f2f2;
}
.manageActiveContentImg{
    width:270rpx;
    height:200rpx;
    margin-left:20rpx;
    margin-top:20rpx;
    float:left;
}

.manageActiveContentImg image{
    width:270rpx;
    height:200rpx;
}

.manageActiveContentOption{
    width:370rpx;
    height:200rpx;
    float:left;
    margin-top:20rpx;
    margin-left:40rpx;
}

.manageActiveContentOption>view:nth-child(1){
    width:100%;
    line-height:35rpx;
    font-size:35rpx;
}

.manageActiveContentOption>view:nth-child(1) text{
    color:#46BBFF;
    text-decoration:underline;
}

.manageActiveContentOption>view:nth-child(2){
    width:100%;
    margin-top:100rpx;
}

.manageActiveContentOption>view:nth-child(2) button{
    width:160rpx;
    line-height:50rpx;
    font-size:24rpx;
    float:left;
    margin-left:15rpx;
    background:#46BBFF;
    color:#fff;
}
.manageActiveContentOption>view:nth-child(2) button:nth-child(1){
    width:180rpx;
}
.manageActiveContentOption>view:nth-child(2) button:nth-child(2){
    color:#46BBFF;
    background:#fff;
    border:1rpx solid #46BBFF;
}

.manageActiveOptions{
    width:710rpx;
    height:78rpx;
    border-radius:0px 0px 5px 5px;
}

.manageActiveOptions text{
    display:inline-block;
    width:33%;
    font-size:30rpx;
    line-height:78rpx;
    text-align:center;
    color:#46BBFF;
}

.manageActiveOptions text:nth-child(4){
     width:34%;
}

.manageActiveOptions text:nth-child(1){
     color:#888888;
}

.manageActiveBottom{
    width:750rpx;
    height:80rpx;
    position:fixed;
    left:0rpx;
    bottom:0rpx;
    background:#E94811;
}

.manageActiveBottomLeft{
    width:188rpx;
    line-height:80rpx;
    font-size:30rpx;
    background:#E7C9BE;
    color:#E94811;
    float:left;
    text-align:center;
}

.manageActiveBottomRight{
    width:562rpx;
    line-height:80rpx;
    float:left;
    text-align:center;
    font-size:30rpx;
    color:#fff;
}