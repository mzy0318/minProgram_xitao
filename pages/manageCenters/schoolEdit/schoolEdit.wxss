@import '../../../templates/frozen/frozen.wxss';
.schoolEdit{
    width:750rpx;
    min-height:1207rpx;
    background:#F2F2F2;
    padding-bottom:100rpx;   
}
/* 学校环境/资质荣誉 */
.schoolEditOne{
    width:700rpx;
    min-height:280rpx;
    margin:0 auto 25rpx;
}
.schoolEditOneTitle{
    width:700rpx;
    line-height:80rpx;
    font-size:30rpx;
    font-weight:bold;
}
.schoolEditOneContent{
    width:700rpx;
    min-height:200rpx;
    background:#fff;
    border-radius:5px;
}
.schoolEditOneImage{
    display:inline-block;
    width:160rpx;
    height:160rpx;
    line-height:160rpx;
    font-size:60rpx;
    font-weight:bold;
    color:#7b7b7b;
    text-align: center;
    border:1rpx solid #efefef;
    margin-top:20rpx;
    margin-left:10rpx;
    position:relative;
    vertical-align: top;
}
.schoolEditOneImage>image{  
    height:160rpx;
     width:160rpx;  
}
.schoolEdit button{
    width:750rpx;
    height:95rpx;
    line-height:95rpx;
    background:#47BAFD;
    color:#fff;
    font-size:30rpx;
    position:fixed;
    left:0rpx;
    bottom:0rpx;
    border:0px;
    z-index:1000;
    text-align:center;
}
.schoolEdit button::after{
    border:0px;
}
/* 品牌视频 */
.empty{
    width:100%;
    height:10rpx;
    background:transparent;
}
.schoolEditTwo{
    width:700rpx;
    min-height:100rpx;
    margin:0 auto 25rpx;
}
.schoolEditTwoContent{
    width:700rpx;
    min-height:100rpx;
    background:#fff;
    border-radius:5px;
}
.schoolEditTwoAdd{
    width:680rpx;
    line-height:100rpx;
    border:1rpx solid #efefef;
    margin-left:10rpx;
    border-radius:5px;
    font-size:80rpx;
    text-align:center;
    color:#7b7b7b;
}
.schoolEditTwoVideo{
    width:680rpx;
    min-height:10rpx;
    margin:10rpx auto 0rpx;
}
.schoolEditTwoVideo video{
    width:680rpx;
    height:270rpx;
}
/*学校介绍*/
.schoolEditThree{
    width:700rpx;
    min-height:420rpx;
    margin:0 auto 25rpx;
}
.schoolEditThreeContent{
    width:700rpx;
    height:340rpx;
    background:#fff;
    border-radius:5px;
    overflow:hidden;
}
.schoolEditThreeChild{
    width:660rpx;
    height:300rpx;
    border:1rpx solid #efefef;
    margin:20rpx 20rpx;
    border-radius:5px;
}
.schoolEditThreeChild textarea{
    width:640rpx;
    height:280rpx;
    margin:10rpx 10rpx;
    font-size:30rpx;
}
/* 删除活动图片 */
.delImage{
    width:50rpx;
    height:50rpx;
    border-radius:50%;
    background:rgba(0,0,0,0.5);
    position:absolute;
    top:10rpx;
    right:10rpx;
    font-size:35rpx;
    line-height:40rpx;
    text-align:center;
    z-index:100;
    color:#fff;
}