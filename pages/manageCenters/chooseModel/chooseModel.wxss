.chooseModeWrap{
    width:750rpx;
    min-height:1207rpx;
    background:#E3E5EC;
}
.chooseModeClass{
    width:750rpx;
    min-height:100rpx;
    background:#fff;
    clear:both;
}
.chooseModeClass>.chooseModeTitle{
    width:30%;
    height:80rpx;
    display:inline-block;
    margin:0rpx 0rpx 15rpx 15rpx;
    border:1rpx solid #E9E9E9;
    border-radius:5px;
    line-height:80rpx;
    text-align:center;
    font-size:30rpx;
}
.chooseModeTheme{
    width:345rpx;
    height:345rpx;
    display:inline-block;
    background:#FFF;
    margin-left:20rpx;
    margin-top:15rpx;
    box-shadow: 2px 2px 2px 2px rgba(0,0,0,0.3);
    border-radius:5px;
}
 .chooseModeThemeImg{
    width:345rpx;
    height:250rpx;
    background:lightblue;
    border-radius:5px 5px 0px 0px;
    overflow: hidden;
}
.chooseModeThemeImg image{
    width:345rpx;
    height:250rpx;
}
.chooseModeThemeName{
    line-height:95rpx;
    width:345rpx;
    text-align:center;
    font-size:32rpx;
} 