@import '../../../utils/iconFontO.wxss';
@import '../../../templates/frozen/frozen.wxss';
page{
    background:#fff;
    padding-bottom:10rpx;
}
.managWarp{
    width:750rpx;
    min-height:1207rpx;
}
.managWarpTop{
    width:750rpx;
    height:350rpx;
    background:#fff;
    position:relative;
}
.managWarpTop>image{
    width:750rpx;
    height:350rpx;
}
.managWarpTop>view{
    width:100rpx;
    padding:0rpx 8rpx;
    height:50rpx;
    line-height:30rpx;
    background:transparent;
    color:#7b7b7b;
    position:absolute;
    right:10rpx;
    top:20rpx;
    font-size:30rpx;
    font-weight:bold;
}
.managWarpTop>view>text{
    display:block;
    float:right;
    margin-top:3rpx;
   
}
.managWarpTop>view>image{
    width:35rpx;
    height:35rpx;
}

.mangeScool{
    width:750rpx;
    min-height:248rpx;
    background:#fff;
}
.mangeScoolTitle,.mangeStuMarktTitle{
    width:750rpx;
    display:block;
    font-size:24rpx;
    line-height:60rpx;
    color:#717171;
    text-indent:20rpx;
}
.mangeScoolOptions{
    width:738rpx;
    min-height:185rpx;
    /* border-left:1rpx solid #efefef; */
    /* border-top:1rpx solid #efefef; */
}
.mangeScoolOptions .mangeScoolOptionsWrap{
    width:183rpx;
    height:183rpx;
    border-right:1rpx solid #efefef;
    border-bottom:1rpx solid #efefef;
    border-top:1rpx solid #efefef;
    margin-top:-1px;
    display:inline-block;
    vertical-align: top;
}
.optionsWrap{
    display:inline-block;
    vertical-align: top;
    width:183rpx;
    height:183rpx;
    border-right:1rpx solid #efefef;
    border-bottom:1rpx solid #efefef;
    border-top:1rpx solid #efefef;
    margin-top:-1px;
}
.iconSize{
    display:block;
    font-size:80rpx;
    margin-left:55rpx;
    margin-top:20rpx;
    color:#1196DB;
}
.mangeScoolOptionsWrapBottom,.optionsBottom{
    font-size:26rpx;
    text-align:center;
    width:100%;
    margin-top:15rpx;
}

.mangeStuMarkt{
    width:750rpx;
    background:#fff;
}
.mangeStuMarktOptions{
    min-height:10rpx;
    width:738rpx;
    background:#fff;
}
.optionsTop{
    width:60rpx;
    height:60rpx;
    background:#E3465B;
    border-radius:5px;
    margin:40rpx auto 0rpx;
    position:relative;
}
 .optionsTop .iconStyle{
    display:block !important;
    /* top:7rpx;
    left:11rpx; */
    position:absolute; 
    color:#fff;
    font-size:40rpx;
    top:50%;
    left:50%;
    margin-left:-18.5rpx;
    margin-top:-22rpx; 
}

.managVersion{
    width:750rpx;
    margin-top:30rpx;
}

.managVersion text{
    display:block;
    font-size:24rpx;
    text-align:center;
    color:#7b7b7b;
}

.loginPage{
    width:100%;
    height:100%;
    background:#fff;
    position:fixed;
    top:0rpx;
    left:0rpx;
}

.empty{
    width:750rpx;
    height:80rpx;
    background:#fff;
}
.loginWrapTitle{
    width:750rpx;
    text-align:center;
    line-height:80rpx;
    font-weight:bold;
}

.loginWrapPhone,.loginWrapPwd{
    width:600rpx;
    height:60rpx;
    margin:60rpx auto 40rpx;
    text-align:center;
    font-size:30rpx;
    border-bottom:1rpx solid rgba(192,192,192,0.5);
}

.loginWrapBtn{
    width:600rpx;
    margin:0 auto;
    line-height:80rpx;
}
.addEmpty{
    width:100%;
    height:10rpx;
    background:#f2f2f2;
}