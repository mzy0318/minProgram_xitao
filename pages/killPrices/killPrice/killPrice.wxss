

.killPriceWrap{
    width:710rpx;
    height:250rpx;
    margin:0 auto 20rpx;
    border-bottom:1rpx solid #f2f2f2;
}

.killPriceBanner{
    width:750rpx;
    height:200rpx;
    background:red;
}

.killPriceImg{
    float:left;
    width:210rpx;
    height:210rpx;
    margin-left:20rpx;
    margin-top:20rpx;
    background:lightgreen;
}
.killPriceImg image{
    width:210rpx;
    height:210rpx;
}
.killPirceOptions{
    float:left;
    width:440rpx;
    height:210rpx;
    margin-left:20rpx;
    margin-top:20rpx;
}

.killPirceOptionsTop{
    width:440rpx;
    line-height:40rpx;
    font-size:30rpx;
    font-weight:hold;
}

.killPirceOptionsMiddle{
    width:440rpx;
    line-height:30rpx;
    font-size:28rpx;
    margin-top:40rpx;
}

.killPirceOptionsBottom{
    height:60rpx;
    width:440rpx;
    background:#fff;
    margin-top:40rpx;
}
.killPirceOptionsT{
    width:180rpx;
    height:70rpx;
    float:left;
}
.killPirceOptionsT text:nth-child(1){
    font-size:30rpx;
    color:#FF6634;
}

.killPirceOptionsT text:nth-child(2){
    font-size:22rpx;
    color:#7b7b7b;
    text-decoration:line-through;
    text-indent:10rpx;
}

.killPirceOptionsBottom button{
    width:180rpx;
    line-height:60rpx;
    float:right;
    background:#FF6634;
    color:#fff;
}