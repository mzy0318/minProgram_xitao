        </view>
        <button bindtap='toIndex'>了解机构 ></button>
        </view>
        <!-- 活动分享 -->
        <view class='activeInfoShare'>
            <view class='activeInfoInfoTitle'>活动分享</view>
            <view class='activeInfoShareImage'><image src='{{enCodeImage}}' mode='scaleToFill'></image></view>
            <button bindtap='saveEncodeImage' >保存二维码到本地</button>
        </view>
        <!-- 活动详情 -->
        <view class='activeInfoImages' hidden='{{isTitleOne}}'>
            <view class='activeInfoInfoTitle'>{{pageData.title1}}</view>
            <view class='emptyImage'></view>
            <view class='activeInfoImage' wx:for='{{pageData.act_image1}}'><image src='{{item.url}}' mode='widthFix'></image></view>
            <view class='activeInfoImagesText'>{{pageData.content1}}</view>
        </view>
        <view class='activeInfoImages' hidden='{{isTitleTwo}}'>
            <view class='activeInfoInfoTitle'>{{pageData.title2}}</view>
            <view class='emptyImage'></view>
            <view class='activeInfoImage' wx:for='{{pageData.act_image2}}'><image src='{{item.url}}' mode='widthFix'></image></view>
            <view class='activeInfoImagesText'>{{pageData.content2}}</view>
        </view>
        <view class='activeInfoImages' hidden='{{isTitleThree}}'>
            <view class='activeInfoInfoTitle'>{{pageData.title2}}</view>
            <view class='emptyImage'></view>
            <view class='activeInfoImage' wx:for='{{pageData.act_image3}}'><image src='{{item.url}}' mode='widthFix'></image></view>
            <view class='activeInfoImagesText'>{{pageData.content3}}</view>
        </view>
    </view>
</view>
