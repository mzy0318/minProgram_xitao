    <view class='activeInfoRank'>
        <view class='activeInfoRankLeft'>
            <view class='activeInfoRankContent'  wx:for='{{newList}}'>
                <view class='contentTop' data-id='{{item.video_vote_joiner_id}}' bindtap='toInfo' wx:if='{{index%2 == 0}}'><image src='{{item.cover.url}}' mode='widthFix'></image></view>
