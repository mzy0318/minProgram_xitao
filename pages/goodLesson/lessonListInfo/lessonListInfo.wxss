@import '../../../utils/iconFont.wxss';
page{
    background:#5E80FE;
}
.listInfoWrap{
    width:750rpx;
    min-height:1207rpx;
    background:#5E80FE;
    position:relative;
}
.listInfoBanner{
    width:750rpx;
    height:660rpx;
    background:#fff;
}
.listInfoBanner image{
    width:750rpx;
    height:660rpx;
}

.listInfoImage{
    width:710rpx;
    min-height:330rpx;
    background:#fff;
    margin:20rpx auto;
}

.listInfoImageChild{
    width:680rpx;
    height:250rpx;
    margin:0 auto 20rpx;
    /* box-shadow:2px 5px 2px 2px #B6C6FA,-2px -1px 2px 2px #B6C6FA; */
    border-radius:5px;
    border:1px solid #efefef;
}
.listInfoImageLeft{
    width:320rpx;
    height:200rpx;
    float:left;
    margin:25rpx 15rpx 0rpx 10rpx;
    overflow:hidden;
}
.listInfoImageLeft image{
    width:320rpx;
    height:200rpx;
}
.listInfoImageRight{
    width:330rpx;
    height:220rpx;
    float:left;
    margin-top:15rpx;
    overflow:hidden;
}
.listInfoImageRightTop{
    font-size:34rpx;
    line-height:50rpx;
    color:#000;
    font-weight:bold;
}
.listInfoImageRightMiddle{
    font-size:28rpx;
    color:#F1AB68;
    line-height:30rpx;
}
.listInfoImageRightBottom{
    font-size:26rpx;
    color:#7b7b7b;
    text-decoration: line-through;
    line-height:40rpx;
    margin-top:20rpx;
}
.listInfoImageRight button{
    background:#FEF529;
    color:#000;
    width:160rpx;
    line-height:50rpx;
    font-size:24rpx;
    text-align:center;
    margin-left:0rpx;
    margin-top:20rpx;
}
.empty{
    width:100%;
    height:20rpx;
}
.listInfoData{
    width:710rpx;
    min-height:900rpx;
    background:#fff;
    border-radius:5px;
    margin:0rpx auto 0rpx;
}
.listInfoDataTitle{
    width:710rpx;
    height:90rpx;
    border-radius:5px 5px 0 0;
    overflow:hidden;
    border-bottom:1rpx solid #efefef;
}
.listInfoDataTitleChild{
    width:670rpx;
    line-height:35rpx;
    font-size:32rpx;
    text-indent:20rpx;
    margin-left:20rpx;
    font-weight:bold;
    margin-top:30rpx;
    border-left:2px solid #5E80FE;
}
.listInfoDataInfo{
    width:100%;
    height:180rpx;
    border-bottom:1rpx solid #efefef;
}
.listInfoDataInfo text{
    display:block;
    line-height:60rpx;
    font-size:28rpx;
    color:#7b7b7b;
    text-indent:20rpx;
}
.listInfoDataActimg{
    width:100%;
    min-height:450rpx;
}
.listInfoDataActimgChild{
    width:670rpx;
    height:450rpx;
    margin:0 auto;
    overflow:hidden;
}
.listInfoDataActimgChild image{
    width:670rpx;
    height:450rpx;
}
.listInfoBottom{
    width:100%;
    height:430rpx;
    overflow: hidden;
}
.iconStyle,.iconStyle1{
    display:block;
    width:100rpx;
    line-height:60rpx;
    font-size:60rpx;
    color:#fff;
    text-align:center;
    margin-left:25rpx;
}
.iconStyle1{
    margin-right:25rpx;
    margin-left:0rpx;
}
.listInfoBottomTop{
    width:100%;
    height:150rpx;
    color:#fff;
    font-size:30rpx;
    text-align:center;
    margin-top:30rpx;
}
.shareBtn{
    width:150rpx;
    height:150rpx;
    float:left;
    margin-left:150rpx;
    background:transparent;
    font-size:30rpx;
    border-radius:0px;
}
.shareBtn text:nth-child(2){
    display:block;
    color:#fff;
    font-size:30rpx;
    text-align:cetner;
    width:150rpx;
    margin-right:26rpx;
    margin-left:-26rpx;
}
.shareBtn::after{
    border:none;
}
.listInfoBottomTop view{
    width:150rpx;
    height:150rpx;
    float:left;
    margin-left:150rpx;
}
.listInfoBottomTop view text:nth-child(2){
    display:block;
    margin-top:20rpx;
}
.listInfoBottomMiddle{
    width:100%;
    line-height:60rpx;
    color:#7F9AFB;
    text-align:center;
    font-size:30rpx;
    margin-top:80rpx;
}
.listInfoBottomBtn{
    clear:both;
    width:340rpx;
    line-height:80rpx;
    background:#F6276B;
    color:#fff;
    text-align:center;
    /* margin:60rpx auto 0rpx; */
    position:absolute;
    bottom:0rpx;
    left:200rpx;
    border-radius:5px 5px 0px 0px;
    
}

.listInfoDataText{
    width:670rpx;
    min-height:60rpx;
    margin:0 auto;
    font-size:30rpx;
    color:#181818;
}
.signUpWrap{
    width:750rpx;
    height:1207rpx;
    background:rgba(0,0,0,0.3);
    position:fixed;
    top:0rpx;
    left:0rpx;
}
.signUpChild{
    width:670rpx;
    min-height:580rpx;
    background:#fff;
    border-radius:5px;
    position:absolute;
    top:50%;
    left:50%;
    margin-left:-335rpx;
    margin-top:-290rpx;
    padding-bottom:30rpx;
}
.signUpChild view{
    width:510rpx;
    height:80rpx;
    border-radius:5px;
    margin:20rpx auto 0rpx;
    background:#F2F2F2;
}
.signUpChild view input{
    width:490rpx;
    height:80rpx;
    margin-left:20rpx;
    font-size:30rpx;
}
.signUpChild view:nth-child(1){
    line-height:80rpx;
    font-size:30rpx;
    text-align:center;
    margin-top:80rpx;
    background:transparent;
}

.signUpInput{
    margin-top:30rpx;
}

.signUpChild button{
    width:510rpx;
    line-height:80rpx;
    background:#47BAFD;
    color:#fff;
    font-size:28rpx;
    margin-top:50rpx;
}

.signUpChildClose{
    width:50rpx !important;
    height:50rpx !important;
    border-radius:50% !important;
    background:#efefef !important;
    position:absolute;
    right:-20rpx;
    top:-40rpx;
    text-align:center;
    color:#7b7b7b;
}
.fontStyle{
    display:block;
    font-size:30rpx;
    margin-top:10rpx;
    margin-left:2rpx;
}

