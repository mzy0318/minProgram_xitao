page{
    padding-bottom:20rpx;
}
.infoVideo{
    width:720rpx;
    height:580rpx;
    border-bottom:1rpx solid #efefef;
    margin:0rpx auto;
}
.infoVideContent{
    width:720rpx;
    height:500rpx;
}
.infoVideContent video{
    width:720rpx;
    height:500rpx;
}
.infoVideoTitle{
    width:720rpx;
    height:80rpx;
    line-height:80rpx;
    font-size:30rpx;
    overflow: hidden;
    white-space: nowrap; 
    text-overflow:ellipsis;
}
.infoVideoTitle>text{
    font-size:24rpx;
    color:#7b7b7b;
}
.infoIndex{
    width:720rpx;
    height:100rpx;
    border-bottom:1rpx solid #efefef;
    margin:0rpx auto 0rpx;
    line-height:100rpx;
    font-size:26rpx;
}

.infoClasses{
    width:720rpx;
    height:240rpx;
    margin:0rpx auto 0rpx;
}
.infoClassesTitle{
    width:720rpx;
    height:80rpx;
    line-height:80rpx;
    font-size:26rpx;
    color:#7b7b7b;
}
.infoClassesContent{
    width:720rpx;
    min-height:160rpx;
}
.infoClassesContent .classWrap{
    width:120rpx;
    height:120rpx;
    border:1rpx solid #efefef;
    display:inline-block;
    margin-top:20rpx;
    margin-left:17rpx;
    vertical-align:top;
}
.classWrap image{
    width:80rpx;
    height:80rpx;
    margin:20rpx 20rpx;
}
.infoClassesInput{
    width:720rpx;
    height:100rpx;
    margin:20rpx auto 0rpx;
}
.infoClassesInput textarea{
    width:580rpx;
    height:120rpx;
    background:#F7F7F7;
    font-size:26rpx;
    float:left;
}
.infoClassesInput button{
    width:120rpx;
    height:120rpx;
    float:right;
    font-size:26rpx;
    line-height:120rpx;
    text-align:center;
}
.infoClassesConnect{
    width:720rpx;
    min-height:200rpx;
    margin:20rpx auto 0rpx;
}
.classesConnectInfo{
    width:720rpx;
    height:80rpx;
    font-size:24rpx;
    color:#7b7b7b;
    line-height:80rpx;  
}
.classesConnectContent{
    width:720rpx;
    min-height:120rpx;
    background:#F0F0F0;
    border-radius:5px;
    margin-top:20rpx;
    padding-bottom:10rpx;
}
.contentTop{
    width:60rpx;
    height:60rpx;
    border-radius:50%;
    background:lightblue;
    float:left;
    margin-top:10rpx;
    margin-left:10rpx;
    overflow:hidden;
}
.contentTop image{
    width:60rpx;
    height:60rpx;
}
.contentBottom{
    width:600rpx;
    height:120rpx;
    float:left;
    margin-left:10rpx;
}
.title{
    width:100%;
    height:70rpx;
    font-size:26rpx;
    color:#606E90;
    line-height:60rpx;

}
.title text{
    float:left;
}
.title text:nth-child(2){
    float:right;
    margin-right:0rpx;
}
.content{
    width:100%;
    height:50rpx;
    line-height:50rpx;
    font-size:24rpx;
}
.contentRely{
    width:630rpx;
    min-height:50rpx;
    background:#fff;
    border-radius:5px;
    margin-top:10rpx;
    margin-left:80rpx;
    clear:both;
}
.contentRelyLeft{
    min-height:50rpx;
    display:inline-block;
    vertical-align: top;
}
.contentRelyLeft>image{
    height:50rpx;
    width:50rpx;
    border-radius:50%;
    overflow:hidden;
    display:inline-block;
    vertical-align: top;
}
.contentRelyLeft>view{
    height:50rpx;
    font-size:24rpx;
    color:#569CD6;
    line-height:50rpx;
    text-align:center;
    display:inline-block;
    vertical-align: top;
    margin-left:10rpx;
}
.contentRelyRight{
    min-height:50rpx;
    font-size:24rpx;
    line-height:50rpx;
    display:inline-block;
    vertical-align: top;
    margin-left:20rpx;
}
