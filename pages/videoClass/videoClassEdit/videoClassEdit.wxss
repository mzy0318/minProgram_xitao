page{
    background:#D9D9D9;
}
.editTitle{
    width:100%;
    height:70rpx;
    font-size:26rpx;
    text-indent:20rpx;
    line-height:70rpx;
}
.editTitle view{
    float:right;
    font-size:22rpx;
    margin-right:20rpx;
    color:#929292;
}
.editImage{
    width:100%;
    height:370rpx;
    background:#fff;
    overflow:hidden;
}
.editImageContent{
    width:710rpx;
    height:350rpx;
    margin:10rpx auto;
    background:#F0F0F0;
    position:relative;
}
.editImageContent>image{
    width:710rpx;
    height:350rpx;
}
.editImageContent>view{
    width:710rpx;
    height:350rpx;
    font-size:80rpx;
    font-weight:bold;
    color:#7b7b7b;
    line-height:350rpx;
    text-align:center;
    position:absolute;
    top:0rpx;
    left:0rpx;
}
.editBase{
    width:100%;
    height:275rpx;
    background:#fff;
}
.editBaseContent{
    width:100%;
    height:90rpx;
    border-bottom:1rpx solid #efefef;
}
.editBaseContent text{
    width:100rpx;
    height:90rpx;
    font-size:26rpx;
    color:#7b7b7b;
    line-height:90rpx;
    text-align:center;
    float:left;
}
.editBaseContent input{
    width:630rpx;
    height:70rpx;
    border-radius:5px;
    background:#F0F0F0;
    float:left;
    margin-top:10rpx;
    text-align:center;
    font-size:26rpx;
}
.editDescribe{
    width:100%;
    height:240rpx;
    background:#fff;
    overflow:hidden;
}
.editDescribeContent{
    width:710rpx;
    height:200rpx;
    background:#F0F0F0;
    margin:20rpx auto;
    border-radius:5px;
}
.editDescribeContent textarea{
    width:690rpx;
    height:180rpx;
    background:transparent;
    margin-left:10rpx;
    margin-top:10rpx;
    float:left;
    font-size:26rpx;
}
.editVideos{
    width:750rpx;
    min-height:110rpx;
    background:#fff;
}
.addVideo{
    width:710rpx;
    height:80rpx;
    margin:0 auto;
    font-size:60rpx;
    font-weight:bold;
    line-height:80rpx;
    text-align:center;
    background:#efefef;
    color:#7b7b7b;
    border-radius:10px;

}
.editVideosContent{
    width:710rpx;
    height:350rpx;
    background:#F0F0F0;
    margin:10rpx auto 20rpx;
    position:relative;
}
.editVideosContent video{
    width:710rpx;
    height:350rpx;
}
.editBtn{
    width:100%;
    height:100rpx;
    color:#fff;
    background:#4EB4FC;
    font-size:35rpx;
    line-height:100rpx;
}

.empty{
    width:100%;
    height:20rpx;
}
/* 删除活动图片 */
.delVideo{
    width:50rpx;
    height:50rpx;
    border-radius:50%;
    background:rgba(0,0,0,0.5);
    position:absolute;
    top:10rpx;
    right:10rpx;
    font-size:35rpx;
    line-height:50rpx;
    text-align:center;
    z-index:100;
    color:#fff;
}