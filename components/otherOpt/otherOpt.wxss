@import '../../utils/iconFont.wxss';
@import '../../utils/iconFontO.wxss';
.otherOptionWrap{
    width:120rpx;
    height:120rpx;
    position:fixed;
    bottom:400rpx;
    right:50rpx;
}
.otherOptions{
    width:100rpx;
    height:100rpx;
    margin:10rpx auto;
    background:rgba(192,192,192,0.5);
    border-radius:50%;
    position:relative;
}

.otherOptionsChild{
    width:120rpx;
    height:300rpx;
    background:transparent;
    position:absolute;
    top:-300rpx;
    right:0rpx;
}
.otherOptionsChild view{
    width:120rpx;
    line-height:60rpx;
    font-size:28rpx;
    text-align:center;
     background:rgba(192,192,192,0.8);
    margin-top:15rpx;
}
.iconStyle{
    width:50rpx;
    height:50rpx;
    font-size:50rpx;
    display:block;
    color:#7b7b7b;
    top:25rpx;
    left:25rpx;
    position:absolute;  
}
.switchBackgroundImage{
    width:750rpx;
    height:80rpx;
    background:#000;
    position:fixed;
    bottom:0rpx;
    left:0rpx;
}

.switchBackgroundImage view,.switchMusicOptions view{
    width:140rpx;
    line-height:50rpx;
    background:#797866;
    font-size:24rpx;
    text-align:center;
    float:left;
    margin-left:20rpx;
    color:#fff;
    margin-top:15rpx;
    border-radius:5px;
}

.switchBackgroundImage view:nth-child(2),.switchMusicOptions view:nth-child(2),.switchMusicOptions view:nth-child(3){
    background:#964499;
    float:right;
    margin-right:20rpx;
    color:#fff;
}
.switchMusic{
    width:750rpx;
    height:400rpx;
    position:fixed;
    bottom:0rpx;
    left:0rpx;
    background:#fff;
}
.switchMusicTitle{
    width:750rpx;
    height:70rpx;
    display:flex;
    justify-content: space-around;
    border-bottom:1rpx solid #efefef;
}

.switchMusicTitle view{
    font-size:28rpx;
    line-height:70rpx;
    text-align:center;
}
.switchMusicBorder{
    border-bottom:2rpx solid #964499;
    color:#964499;
}
.switchMusicContent{
    width:750rpx;
    min-height:250rpx;
    display:fles;
    justify-content: space-around;
}
.switchMusicContent view{
    width:30%;
    height:40rpx;
    float:left;
    margin-top:20rpx;
    margin-left:15rpx;
    font-size:24rpx;
    text-align:center;
}
.switchMusicOptions{
    width:750rpx;
    height:80rpx;
    background:#000;
}

.switchModelContent{
    width:750rpx;
    height:250rpx;
    background:#fff;
    overflow-x: scroll;
}

.switchModelContentChild{
    float:left;
    min-width:750rpx;
    height:200rpx;
    margin-top:25rpx;
    display:flex;
    justify-content: space-around;
    flex-direction:row;
}

.switchModelContentChild .modelContentChildContent{
    width:200rpx;
    height:150rpx;
    margin-left:20rpx;
    float:left;
    margin-top:25rpx;
 }
 .modelContentChildContent view:nth-child(1){
     width:200rpx;
     line-height:35rpx;
     font-size:26rpx;
     text-align:center;
     color:#000;
 } 
.modelContentChildContent view:nth-child(2){
     width:200rpx;
     height:115rpx;
     background:red;
 } 

 .modelContentChildContent view:nth-child(2) image{
     width:200rpx;
     height:115rpx;
 }